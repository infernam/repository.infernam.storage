<?xml version="1.0" encoding="UTF-8"?>
<addons>
<addon id="plugin.video.1tv.ru"
       name="1tv.ru"
       version="2.2.4"
       provider-name="am">
    <requires>
        <import addon="xbmc.python" version="2.1.0"/>
    </requires>
    <extension point="xbmc.python.pluginsource" provides="video" library="default.py">
        <provides>video</provides>
    </extension>

    <extension point="xbmc.addon.metadata">
        <summary>Видеоархивы 1tv.ru</summary>
        <description>Видеоархивы 1tv.ru</description>
        <platform>all</platform>
    </extension>
</addon>

    <addon id="repository.infernam" name="Infernams addons" version="0.1.0" provider-name="infernam">
        <requires>
            <import addon="xbmc.addon" version="12.0.0"/>
        </requires>
        <extension point="xbmc.addon.repository" name="Infernams addons">
            <info compressed="false">https://raw.githubusercontent.com/infernam/repository.infernam.storage/master/_repo/addons.xml</info>
            <checksum>https://raw.githubusercontent.com/infernam/repository.infernam.storage/master/_repo/addons.xml.md5</checksum>
            <datadir zip="true">https://raw.githubusercontent.com/infernam/repository.infernam.storage/master/_repo/</datadir>
            <hashes>false</hashes>
        </extension>
        <extension point="xbmc.addon.metadata">
            <summary>infernams kodi addons</summary>
            <description>The description can be longer. Using [CR] you can create a newline. The use of other markup is not advised.</description>
            <platform>all</platform>
    </extension>
</addon>
</addons>
